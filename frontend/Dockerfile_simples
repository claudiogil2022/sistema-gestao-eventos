# Dockerfile para versÃ£o limpa simples
FROM nginx:alpine

# Remove configuraÃ§Ã£o padrÃ£o
RUN rm /etc/nginx/conf.d/default.conf

# Copia a configuraÃ§Ã£o para versÃ£o limpa
COPY nginx_simples.conf /etc/nginx/conf.d/default.conf

# Copia o arquivo HTML limpo
COPY src/index_clean.html /usr/share/nginx/html/index.html

# TambÃ©m disponibiliza na rota /events
RUN cp /usr/share/nginx/html/index.html /usr/share/nginx/html/events.html

# Cria script de inicializaÃ§Ã£o
RUN echo '#!/bin/sh' > /docker-entrypoint.sh && \
    echo 'echo "=== VERSÃƒO LIMPA INICIADA ==="' >> /docker-entrypoint.sh && \
    echo 'echo "ðŸŒ VersÃ£o LIMPA: http://localhost:3000/"' >> /docker-entrypoint.sh && \
    echo 'echo "ðŸŒ VersÃ£o LIMPA (rota especÃ­fica): http://localhost:3000/events"' >> /docker-entrypoint.sh && \
    echo 'echo "ðŸ”§ API Backend: http://localhost:8080/api/events"' >> /docker-entrypoint.sh && \
    echo 'echo ""' >> /docker-entrypoint.sh && \
    echo 'echo "Verificando arquivos servidos:"' >> /docker-entrypoint.sh && \
    echo 'ls -la /usr/share/nginx/html/' >> /docker-entrypoint.sh && \
    echo 'echo ""' >> /docker-entrypoint.sh && \
    echo 'echo "Testando configuraÃ§Ã£o nginx..."' >> /docker-entrypoint.sh && \
    echo 'nginx -t' >> /docker-entrypoint.sh && \
    echo 'echo "Iniciando nginx..."' >> /docker-entrypoint.sh && \
    echo 'nginx -g "daemon off;"' >> /docker-entrypoint.sh && \
    chmod +x /docker-entrypoint.sh

EXPOSE 80

CMD ["/docker-entrypoint.sh"]
